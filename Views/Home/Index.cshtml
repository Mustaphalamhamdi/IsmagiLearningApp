@{
    ViewData["Title"] = "Home Page";
}

<div class="hero-section mb-5">
    <div class="row align-items-center">
        <div class="col-lg-6">
            <h1 class="hero-title mb-4">Start Your Learning Journey Today</h1>
            <p class="hero-text mb-4">Unlock your potential with our interactive learning platform. Experience personalized education that adapts to your pace and learning style.</p>
            <div class="hero-buttons d-flex gap-3 mb-5">
                <a href="/Identity/Account/Register" class="btn btn-primary">Get Started</a>
            </div>
            <div class="achievement-cards">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="achievement-card">
                            <div class="achievement-icon">👨‍🎓</div>
                            <div class="achievement-number">5000+</div>
                            <div class="achievement-label">Active Students</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="achievement-card">
                            <div class="achievement-icon">📚</div>
                            <div class="achievement-number">100+</div>
                            <div class="achievement-label">Course Topics</div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="achievement-card">
                            <div class="achievement-icon">🌟</div>
                            <div class="achievement-number">95%</div>
                            <div class="achievement-label">Success Rate</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6 d-none d-lg-block">
            <div class="hero-image">
                <!-- Lottie Animation -->
                <lottie-player 
                    src="https://assets10.lottiefiles.com/packages/lf20_k1o8xnbd.json" 
                    background="transparent" 
                    speed="1" 
                    style="width: 100%; height: auto;" 
                    loop 
                    autoplay>
                </lottie-player>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        padding: 2rem 0 4rem;
    }

    .hero-title {
        font-size: 3.5rem;
        font-weight: 700;
        line-height: 1.2;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1rem;
    }

    .hero-text {
        font-size: 1.2rem;
        color: var(--text-muted);
        max-width: 500px;
        line-height: 1.6;
    }

    .btn-outline {
        border: 2px solid var(--border-color);
        color: var(--text-color);
        background: transparent;
        transition: all 0.3s ease;
    }

    .btn-outline:hover {
        border-color: var(--primary-color);
        color: var(--primary-color);
        transform: translateY(-2px);
    }

    .achievement-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        transition: all 0.3s ease;
        border: 1px solid var(--border-color);
    }

    .achievement-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.05);
        border-color: var(--primary-color);
    }

    .achievement-icon {
        font-size: 2rem;
        margin-bottom: 0.5rem;
    }

    .achievement-number {
        font-size: 1.5rem;
        font-weight: 700;
        color: var(--primary-color);
        margin-bottom: 0.25rem;
    }

    .achievement-label {
        color: var(--text-muted);
        font-size: 0.9rem;
    }

    .hero-image {
        position: relative;
        padding: 2rem;
    }

    .hero-image lottie-player {
        border-radius: 1rem;
        box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease;
    }

    .hero-image::after {
        content: '';
        position: absolute;
        top: 0;
        right: 0;
        width: 100%;
        height: 100%;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        opacity: 0.1;
        border-radius: 2rem;
        transform: rotate(-3deg);
        z-index: -1;
    }

    @@media (max-width: 992px) {
        .hero-title {
            font-size: 2.5rem;
        }

        .hero-text {
            font-size: 1.1rem;
        }

        .hero-section {
            padding: 1rem 0 2rem;
        }

        .achievement-card {
            padding: 1rem;
        }
    }
</style>

<script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>
