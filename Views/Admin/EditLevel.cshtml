@model IsmagiLearningApp.Models.Level

@{
    ViewData["Title"] = "Edit Level";
}

<h1>Edit Level</h1>

<h4>Level</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="EditLevel" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProgrammingLanguageId" class="control-label"></label>
                <input asp-for="ProgrammingLanguageId" class="form-control" readonly />
                <span asp-validation-for="ProgrammingLanguageId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DifficultyId" class="control-label"></label>
                <select asp-for="DifficultyId" class="form-control" asp-items="@(new SelectList(ViewBag.Difficulties, "Id", "Name"))"></select>
                <span asp-validation-for="DifficultyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InitialCode" class="control-label"></label>
                <textarea asp-for="InitialCode" class="form-control"></textarea>
                <span asp-validation-for="InitialCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedSolution" class="control-label"></label>
                <textarea asp-for="ExpectedSolution" class="form-control"></textarea>
                <span asp-validation-for="ExpectedSolution" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Hints" class="control-label"></label>
                <textarea asp-for="Hints" class="form-control"></textarea>
                <span asp-validation-for="Hints" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OrderIndex" class="control-label"></label>
                <input asp-for="OrderIndex" class="form-control" />
                <span asp-validation-for="OrderIndex" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ManageLevels" asp-route-languageId="@Model.ProgrammingLanguageId">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
