@using IsmagiLearningApp.Models.ViewModels
@model ManageLevelsViewModel
<div class="container mt-4">
    <div class="dashboard-header text-center mb-4">
        <h2 class="dashboard-title">Manage Levels</h2>
        <p class="dashboard-subtitle">@Model.Language.Name - Level Management</p>
    </div>

    <div class="action-bar mb-4">
        <a asp-action="CreateLevel" asp-route-languageId="@Model.Language.Id" class="btn btn-create">
            <i class="bi bi-plus-circle"></i> Add New Level
        </a>
    </div>

    <div class="row">
        @foreach (var difficultyGroup in Model.LevelsByDifficulty)
        {
            <div class="col-12 mb-4">
                <div class="card difficulty-section">
                    <div class="card-header">
                        <h5 class="mb-0">@difficultyGroup.Key</h5>
                    </div>
                    <div class="card-body">
                        @if (difficultyGroup.Value.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Title</th>
                                            <th>Description</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var level in difficultyGroup.Value.OrderBy(l => l.OrderIndex))
                                        {
                                            <tr>
                                                <td>@level.OrderIndex</td>
                                                <td>@level.Title</td>
                                                <td>@level.Description</td>
                                                <td>
                                                    <div class="btn-group">
                                                        <a asp-action="EditLevel" asp-route-id="@level.Id" 
                                                           class="btn btn-outline-primary btn-sm">
                                                            <i class="bi bi-pencil"></i> Edit
                                                        </a>
                                                        <button onclick="confirmDelete(@level.Id, '@level.Title')" 
                                                                class="btn btn-outline-danger btn-sm">
                                                            <i class="bi bi-trash"></i> Delete
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <p class="text-muted mb-0">No levels created for this difficulty yet</p>
                                <a asp-action="CreateLevel" asp-route-languageId="@Model.Language.Id" 
                                   class="btn btn-sm btn-outline-primary mt-2">
                                    Add First Level
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <span id="levelTitle"></span>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="DeleteLevel" method="post" style="display: inline;">
                    <input type="hidden" id="levelId" name="id" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .difficulty-section {
        background: white;
        border-radius: 1rem;
        border: 1px solid #e2e8f0;
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        overflow: hidden;
    }

    .card-header {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        padding: 1rem 1.5rem;
        border-bottom: 1px solid #e2e8f0;
    }

    .card-header h5 {
        color: white;
        margin: 0;
    }

    .card-body {
        padding: 1.5rem;
    }

    .btn-create {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 500;
        display: flex;
        align-items: center;
        gap: 0.5rem;
        transition: all 0.3s ease;
    }

    .btn-create:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
        color: white;
    }

    .table {
        margin-bottom: 0;
    }

    .table th {
        font-weight: 600;
        color: #0f172a;
        border-bottom: 2px solid #e2e8f0;
    }

    .table td {
        vertical-align: middle;
        color: #334155;
    }

    .btn-group {
        display: flex;
        gap: 0.5rem;
    }

    .btn-outline-primary {
        border-color: #6366f1;
        color: #6366f1;
    }

    .btn-outline-primary:hover {
        background-color: #6366f1;
        border-color: #6366f1;
        color: white;
    }

    .btn-outline-danger {
        border-color: #ef4444;
        color: #ef4444;
    }

    .btn-outline-danger:hover {
        background-color: #ef4444;
        border-color: #ef4444;
        color: white;
    }

    .modal-content {
        border-radius: 1rem;
        border: none;
    }

    .modal-header {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border-top-left-radius: 1rem;
        border-top-right-radius: 1rem;
    }

    .modal-footer {
        border-top: 1px solid #e2e8f0;
    }

    @@media (max-width: 768px) {
        .btn-group {
            flex-direction: column;
        }

        .btn-group .btn {
            width: 100%;
        }

        .dashboard-title {
            font-size: 1.75rem;
        }
    }
</style>

@section Scripts {
    <script>
        function confirmDelete(id, title) {
            document.getElementById('levelId').value = id;
            document.getElementById('levelTitle').textContent = title;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}