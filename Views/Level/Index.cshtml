@model IEnumerable<IsmagiLearningApp.Models.Level>

<h2>Levels for @ViewBag.LanguageName</h2>

<div class="row">
    @foreach (var level in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@level.Title</h5>
                    <h6 class="card-subtitle mb-2 text-muted">@level.Difficulty</h6>
                    <p class="card-text">@level.Description</p>
                    <a asp-action="Details" asp-route-id="@level.Id"
                       class="btn btn-primary">Start Level</a>
                </div>
            </div>
        </div>
    }
</div>