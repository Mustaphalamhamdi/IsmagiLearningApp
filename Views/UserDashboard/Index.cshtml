@model IEnumerable<ProgrammingLanguage>

<div class="dashboard-container">
    <div class="dashboard-header mb-4">
        <h2 class="dashboard-title">Your Learning Dashboard</h2>
        <p class="dashboard-subtitle">Choose a programming language to start your coding journey</p>
    </div>

    <div class="row g-4 mb-5">
        @if (Model != null && Model.Any())
        {
            @foreach (var language in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="language-card">
                        <div class="language-card-inner">
                            <h3 class="language-title">@language.Name</h3>
                            <p class="language-description">@language.Description</p>
                            
                            <div class="difficulty-section mb-4">
                                <h6 class="difficulty-title">Available Levels:</h6>
                                <div class="difficulty-badges">
                                    @if (language.DifficultyLevels != null && language.DifficultyLevels.Any())
                                    {
                                        @foreach (var difficulty in language.DifficultyLevels.Where(d => d.IsAvailable).OrderBy(d => d.DisplayOrder))
                                        {
                                            <span class="difficulty-badge">@difficulty.Name</span>
                                        }
                                    }
                                </div>
                            </div>
                            
                            <a asp-action="Difficulties" 
                               asp-route-languageId="@language.Id" 
                               class="start-learning-btn">
                                Start Learning
                                <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center">
                <p>No programming languages available at the moment.</p>
            </div>
        }
    </div>
</div>

<style>
    .dashboard-container {
        padding: 1rem 0;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #64748b;
        max-width: 600px;
        margin: 0 auto;
    }

    .language-card {
        height: 100%;
        background: white;
        border-radius: 1rem;
        border: 1px solid #e2e8f0;
        transition: all 0.3s ease;
    }

    .language-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-color: #6366f1;
    }

    .language-card-inner {
        padding: 1.5rem;
        height: 100%;
        display: flex;
        flex-direction: column;
    }

    .language-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: #0f172a;
    }

    .language-description {
        color: #64748b;
        font-size: 0.9rem;
        line-height: 1.6;
        margin-bottom: 1rem;
        flex-grow: 1;
    }

    .difficulty-title {
        font-size: 0.875rem;
        font-weight: 600;
        margin-bottom: 0.5rem;
        color: #0f172a;
    }

    .difficulty-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-bottom: 1rem;
    }

    .difficulty-badge {
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        padding: 0.35rem 0.75rem;
        border-radius: 1rem;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .start-learning-btn {
        display: inline-flex;
        align-items: center;
        padding: 0.75rem 1.25rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        color: white;
        border-radius: 0.5rem;
        font-weight: 500;
        text-decoration: none;
        transition: all 0.3s ease;
        margin-top: auto;
    }

    .start-learning-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 12px rgba(99, 102, 241, 0.2);
        color: white;
    }

    .start-learning-btn i {
        transition: transform 0.3s ease;
    }

    .start-learning-btn:hover i {
        transform: translateX(3px);
    }

    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 2rem;
        }

        .language-card {
            margin-bottom: 1rem;
        }
    }
</style>