@model IEnumerable<IsmagiLearningApp.Models.Level>

<div class="levels-container">
    <div class="dashboard-header mb-4">
        <h2 class="dashboard-title">Select Your Level</h2>
        <p class="dashboard-subtitle">Master each level to advance your programming skills</p>
    </div>

    <div class="levels-grid">
        @if (Model != null && Model.Any())

        {
            @foreach (var level in Model)

            {
                <div class="level-box" onclick="window.location.href='@Url.Action("LevelDetails", "UserDashboard", new { levelId = level.Id })'">
                    <div class="level-content">
                        <h3 class="level-title">@level.Title</h3>
                        <div class="level-status">
                            <i class="bi bi-chevron-right"></i>
                        </div>
                    </div>
                </div>
            }
        }

        else

        {
            <div class="text-center w-100">
                <p>No levels available at the moment.</p>
            </div>
        }
    </div>
</div>

<style>
    .levels-container {
        padding: 1rem 0;
    }

    .dashboard-header {
        text-align: center;
        margin-bottom: 2rem;
    }

    .dashboard-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        background: linear-gradient(135deg, #6366f1, #8b5cf6);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .dashboard-subtitle {
        font-size: 1.1rem;
        color: #64748b;
        max-width: 600px;
        margin: 0 auto;
    }

    .levels-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 1.5rem;
        padding: 1rem;
    }

    .level-box {
        background: white;
        border: 1px solid #e2e8f0;
        border-radius: 1rem;
        cursor: pointer;
        transition: all 0.3s ease;
        overflow: hidden;
    }

    .level-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        border-color: #6366f1;
    }

    .level-content {
        padding: 1.5rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .level-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: #0f172a;
        margin: 0;
    }

    .level-status {
        color: #6366f1;
        font-size: 1.25rem;
        transition: transform 0.3s ease;
    }

    .level-box:hover .level-status {
        transform: translateX(5px);
    }

    @@media (max-width: 768px) {
        .dashboard-title {
            font-size: 2rem;
        }

        .levels-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }

        .level-content {
            padding: 1.25rem;
        }

        .level-title {
            font-size: 1.1rem;
        }
    }
</style>