<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ismagi E-Learning</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/IsmagiLearningApp.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://use.typekit.net/xyg6fou.css">



    <style>
        @@font-face {
            font-family: "termina", sans-serif;
            font-weight: 400;
            font-style: normal;
        }

        @@font-face {
            font-family: "termina", sans-serif;
            font-weight: 700;
            font-style: normal;
        }

        :root {
            --primary-color: #0A0A0A;
            --secondary-color: #1A1A1A;
            --accent-color: #004791;
            --background-color: #ffffff;
            --surface-color: #ffffff;
            --text-color: #6B7280;
            --text-muted: #6B7280;
            --border-color: #000000;
        }

        body {
            font-family: 'termina', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            line-height: 1.6;
        }

        .navbar {
            padding: 1.5rem 0;
            position: absolute;
            width: 100%;
            top: 0;
            z-index: 1000;
            transition: all 0.3s ease;
        }


        .navbar-brand {
            font-weight: 700;
            font-size: 1.25rem;
            color: var(--primary-color);
            letter-spacing: -0.025em;
        }

            .navbar-brand img {
                height: 80px;
                width: auto;
                transition: transform 0.3s ease;
            }

            .navbar-brand:hover img {
                transform: scale(1.05);
            }

        .nav-link {
            font-size: 0.9375rem;
            font-weight: 500;
            color: var(--text-color) !important;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
            position: relative;
            opacity: 0.8;
        }

            .nav-link:hover {
                opacity: 1;
                color: var(--accent-color) !important;
            }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 1rem;
                right: 1rem;
                height: 2px;
                background-color: var(--accent-color);
                transform: scaleX(0);
                transition: transform 0.2s ease;
            }

            .nav-link:hover::after {
                transform: scaleX(1);
            }

        main {
            margin-top: 80px;
            flex: 1 0 auto;
            padding: 4rem 0;
            position: relative;
        }

        .container {
            max-width: 1280px;
            padding: 0 2rem;
        }

        .btn {
            padding: 0.75rem 1.5rem;
            font-weight: 500;
            font-size: 0.9375rem;
            border-radius: 0.5rem;
            transition: all 0.2s ease;
            letter-spacing: -0.01em;
        }

        .btn-primary {
            background-color: var(--primary-color);
            border: none;
            color: white;
        }

            .btn-primary:hover {
                background-color: var(--secondary-color);
                transform: translateY(-1px);
                box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
            }

        .footer {
            background-color: var(--background-color);
            color: var(--text-muted);
            padding: 4rem 0;
            border-top: 1px solid var(--border-color);
            margin-top: auto;
        }

            .footer a {
                color: var(--text-color);
                text-decoration: none;
                transition: color 0.2s ease;
            }

                .footer a:hover {
                    color: var(--accent-color);
                }

        .background-grid {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
            background-image: linear-gradient(var(--border-color) 1px, transparent 1px), linear-gradient(90deg, var(--border-color) 1px, transparent 1px);
            background-size: 50px 50px;
            opacity: 0.1;
            z-index: -1;
        }

        @@media (max-width: 992px) {
            .navbar {
                padding: 1rem 0;
            }

            .navbar-brand {
                font-size: 1.125rem;
            }

            .nav-link {
                padding: 0.5rem;
            }

            main {
                margin-top: 64px;
                padding: 2rem 0;
            }

            .container {
                padding: 0 1rem;
            }
        }

        .auth-buttons .btn {
            margin-left: 0.5rem;
        }

        .navbar-toggler {
            border: none;
            padding: 0.5rem;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        .navbar-toggler-icon {
            width: 1.25em;
            height: 1.25em;
        }
    </style>
</head>
<body>
    <div class="background-grid"></div>

    <header>
        <nav class="navbar navbar-expand-sm navbar-light">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/logo.png" alt="IsmagiE-Learning" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="Admin" asp-action="UserProgress">User Progress</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserDashboard" asp-action="Index">My Learning</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" asp-controller="UserDashboard" asp-action="Progress">My Progress</a>
                                </li>
                            }
                        }
                    </ul>
                    <div class="auth-buttons">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                <div>&copy; 2024 IsmagiLearningApp</div>
                <div>
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="ms-3">Privacy Policy</a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        window.addEventListener('scroll', function () {
            const navbar = document.querySelector('.navbar');
            if (window.scrollY > 10) {
                navbar.classList.add('scrolled');
            } else {
                navbar.classList.remove('scrolled');
            }
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
